package servlet;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.util.ArrayList;

import core.Category;
import core.Watch;
import dao.CategoryDAO;
import dao.WatchDAO;

/**
 * Servlet implementation class WatchServlet
 */
public class WatchServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public WatchServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		int currentPage = 1;
	    String pageParam = request.getParameter("page");
	    if (pageParam != null && !pageParam.isEmpty()) {
	        currentPage = Integer.parseInt(pageParam);
	    }

	    // Set the number of watches to display per page
	    int watchesPerPage = 10;

	    // Get the total number of watches
	    int totalWatches = WatchDAO.gettotal();

	    // Calculate the total number of pages
	    int totalPages = (int) Math.ceil((double) totalWatches / watchesPerPage);

	    // Get the subset of watches for the current page
	    ArrayList<Watch> listWatch = WatchDAO.getAllProducts(currentPage, watchesPerPage);

	    // Set watches and pagination information in the request
	    request.setAttribute("listWatch", listWatch);
	    request.setAttribute("totalPages", totalPages);
	    request.setAttribute("currentPage", currentPage);

	    // Forward the request to the JSP page for rendering
	    request.getRequestDispatcher("watchmanagement.jsp").forward(request, response);
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
